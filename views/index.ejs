    <div class="row">
      <% for(let listing of allListings) { %>   
        <div class="col-md-4 mb-4">
          <div class="card h-100" style="width: 100%;"> 
            <a href="/listings/<%= listing._id %> " class="listing-link">
              <img src="<%= listing.image.url %>" 
                   class="card-img-top" 
                   alt="listing_image" 
                   style="height: 20rem; object-fit: cover;">
              <div class="card-img-overlay">abcd</div>
            </a>
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b><br />
                &#8377;<%= (listing.price !== undefined && listing.price !== null) 
                        ? listing.price.toLocaleString("en-IN") 
                        : "N/A" %> /night

              <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
              </p>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <script>
  document.addEventListener("DOMContentLoaded", () => {
    // 1.  grab the right element
    const taxSwitch = document.getElementById("switchCheckDefault");  // ← matches HTML

    // 2.  make sure it exists (avoids “null” errors)
    if (!taxSwitch) return;

    /* 3.  use the “change” event (fires both on click and with
            keyboard / touch; works the same for a checkbox switch) */
    taxSwitch.addEventListener("change", () => {
      document.querySelectorAll(".tax-info").forEach(el => {
        // look at real-time computed style so we work even if the element
        // was hidden by a stylesheet instead of inline CSS
        const hidden = window.getComputedStyle(el).display === "none";
        el.style.display = hidden ? "inline" : "none";
      });
    });
  });
</script>




